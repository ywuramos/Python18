nome = str(input('Digite seu nome: ')).strip()
print('Seu nome em letras maiúscula é {}'.format(nome.upper()))
print('Seu nome com letras minúsculas é {}'.format(nome.lower()))
print('Seu nome sem espaço tem {} letras'.format(len(nome) - nome.count(' ')))
print('Seu primeiro nome tem {} letras'.format(nome.find(' ')))
# ------------------------------------------------------------
separa = nome.split()
print('Seu primeiro nome {} tem {} letras'.format(separa[0].upper(), len(separa[0])))
